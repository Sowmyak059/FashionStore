@model FashionStore.Models.MainCategory

@{
    ViewData["Title"] = "Men";
}

<div class="men-page">
    @await Html.PartialAsync("_CategoriesPartial", Model.CategoryHeaders)
    @await Html.PartialAsync("_ProductsPartial", Model.CategoryHeaders.SelectMany(ch => ch.Categories).SelectMany(c => c.Products))
</div>

@section Scripts {
    <script src="~/js/scripts.js"></script>
}

/* --- Left-Side Category Container --- */
.category-container {
    background: linear-gradient(to right, #f8f9fa, #ffffff);
    padding: 15px;
    border-radius: 8px;
    box-shadow: 2px 4px 10px rgba(0, 0, 0, 0.1);
    width: 250px;
    font-family: 'Arial', sans-serif;
}

/* --- Category Title --- */
.category-title {
    font-size: 20px;
    font-weight: bold;
    color: #333;
    margin-bottom: 15px;
    padding-left: 10px;
    border-left: 4px solid #ff4081; /* Accent Color */
}

/* --- Category List --- */
.category-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.category-list li {
    padding: 10px;
    border-bottom: 1px solid #ddd;
    transition: background 0.3s ease-in-out;
}

.category-list li:last-child {
    border-bottom: none;
}

/* --- Category Links --- */
.category-list li a {
    text-decoration: none;
    color: #333;
    font-size: 16px;
    font-weight: 500;
    display: block;
    transition: color 0.3s ease-in-out;
}

/* --- Hover Effect --- */
.category-list li:hover {
    background: rgba(255, 64, 129, 0.1);
}

.category-list li a:hover {
    color: #ff4081;
    font-weight: bold;
}
