@model FashionStore.Models.Product

@{
    ViewData["Title"] = Model.Name;
    var categoryHeaders = ViewBag.CategoryHeaders as IEnumerable<FashionStore.Models.CategoryHeader>;
}

<div class="men-page">
    @await Html.PartialAsync("_CategoriesPartial", categoryHeaders)

    <div class="content">
        <!-- Product Section -->
        <div class="product-section">
            <div class="product-details-container">
                <div class="product-image">
                    <img src="@Model.ImageUrl" alt="@Model.Name" />
                </div>

                <div class="product-info">
                    <h1>@Model.Name</h1>
                    <p class="product-description">@Model.Description</p>
                    <p class="product-price">Price: <strong>$@Model.Price</strong></p>

                    <div class="product-actions">
                        <button class="add-to-cart-btn" onclick="addToCart(@Model.ProductID)">Add to Cart</button>
                        <button class="wishlist-btn" onclick="toggleWishlist(@Model.ProductID)" id="wishlist-btn-@Model.ProductID">
                            <span id="wishlist-icon-@Model.ProductID" class="wishlist-icon">&#x2661;</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer Reviews and Ratings Section -->
        <div class="reviews-section">
            @await Html.PartialAsync("_ReviewsPartial", Model.Reviews)
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/scripts.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadReviews(@Model.ProductID);
        });
    </script>
}

<style>
    .men-page {
        display: flex;
        gap: 20px;
    }

    .categories {
        width: 250px;
        padding: 15px;
        border-right: 2px solid #ccc;
        background: #f8f8f8;
        position: sticky;
        top: 0;
    }

    .content {
        flex: 1;
    }

    .product-section {
        padding: 5px;
    }

    .product-details-container {
        display: flex;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: #f9f9f9;
        max-width: 1200px;
        margin-bottom: 5px;
    }

    .product-image img {
        display: block;
        margin-right: 20px;
        width: 300px;
        height: auto;
        border-radius: 10px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }

    .product-info {
        flex: 1;
    }

        .product-info h1 {
            font-size: 24px;
            margin-bottom: 10px;
        }

    .product-description {
        font-size: 16px;
        color: #555;
        margin-bottom: 10px;
    }

    .product-price {
        font-size: 18px;
        font-weight: bold;
        color: #d9534f;
        margin-bottom: 20px;
    }

    .product-actions {
        display: flex;
        gap: 10px;
    }

    .add-to-cart-btn, .wishlist-btn {
        padding: 10px 15px;
        font-size: 16px;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        transition: background 0.3s ease;
    }

    .add-to-cart-btn {
        background-color: #28a745;
        color: white;
    }

        .add-to-cart-btn:hover {
            background-color: #218838;
        }

    .wishlist-btn {
        background-color: #f8f9fa;
        color: #d9534f;
        border: 1px solid #d9534f;
    }

        .wishlist-btn:hover {
            background-color: #d9534f;
            color: white;
        }

    .wishlist-icon {
        font-size: 18px;
        margin-right: 5px;
    }

    .reviews-section {
        width: 100%;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background-color: beige;
        margin-top: 20px;
    }

        .reviews-section h2 {
            font-size: 22px;
            margin-bottom: 15px;
        }
</style>