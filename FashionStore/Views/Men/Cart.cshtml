@model IEnumerable<Product>

<h2>Your Cart</h2>
<div class="cart">
    @foreach (var product in Model)
    {
        <div class="cart-item">
            <img src="@product.ImageUrl" alt="@product.Name" />
            <h3>@product.Name</h3>
            <p>@product.Description</p>
            <p>@product.Price</p>
        </div>
    }
</div>
