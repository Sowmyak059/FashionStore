@model IEnumerable<FashionStore.Models.Order>

<h2 class="text-center my-4 text-primary">Order History</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="table-responsive">
                <table class="table table-striped table-hover shadow-lg rounded">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>Order Date</th>
                            <th>Total Price</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr class="order-row">
                                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                                <td>@order.TotalPrice kr</td>
                                <td>
                                    <a href="/Cart/OrderDetails/@order.OrderID" class="btn btn-info btn-sm shadow-sm animate-btn">
                                        <i class="fas fa-eye"></i> View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Add some effects */
    .table {
        border-radius: 10px;
        overflow: hidden;
    }

    .order-row:hover {
        background-color: #f8f9fa;
        transition: background-color 0.3s ease-in-out;
    }

    .animate-btn {
        transition: transform 0.2s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .animate-btn:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
</style>

<!-- FontAwesome for Icons -->
<script src="https://kit.fontawesome.com/YOUR_KIT_ID.js" crossorigin="anonymous"></script>
