@{
    ViewData["Title"] = "Payment Successful";
}

<div class="d-flex align-items-center justify-content-center vh-100 bg-light">
    <div class="success-container">
        <i class="fas fa-check-circle checkmark"></i>
        <h2 class="text-success mt-3">Payment Successful</h2>
        <p class="text-muted">Thank you for your purchase! Your payment has been successfully processed.</p>
        <a href="@Url.Action("OrderHistory", "Cart")" class="btn btn-primary mt-3">View Order History</a>
    </div>
</div>


<style>
    @@keyframes fadeIn {
        from{opacity: 0; transform: translateY(-10px);}
        to{opacity: 1; transform: translateY(0);}
    }

    @@keyframes popIn {
        0% {transform: scale(0.5); opacity: 0;}
        100% { transform: scale(1); opacity: 1; }
    }

    .success-container {
        max-width: 500px;
        margin: auto;
        padding: 30px;
        background: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        animation: fadeIn 1s ease-in-out;
    }

    .checkmark {
        font-size: 60px;
        color: #28a745;
        animation: popIn 0.5s ease-in-out;
    }

    .btn-primary {
        background: linear-gradient(45deg, #007bff, #0056b3);
        border: none;
        transition: all 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background: linear-gradient(45deg, #0056b3, #003b80);
            transform: scale(1.05);
        }
</style>


