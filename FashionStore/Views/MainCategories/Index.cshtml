@model IEnumerable<FashionStore.Models.MainCategory>

@{
    ViewData["Title"] = ">Main Categories";
}

<h1>Main Categories</h1>
@if (User.IsInRole("Admins"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>

}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                @if (User.IsInRole("Admins"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MainCategoryID">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.MainCategoryID">Delete</a>
                    </td>
                }
            </tr>
        }

    </tbody>
</table>
