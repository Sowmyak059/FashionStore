@model IEnumerable<FashionStore.Models.CategoryHeader>

<div class="categories">
    <ul>
        @foreach (var categoryHeader in Model)
        {
            <li class="category-header">
                <h3>@categoryHeader.Name</h3>
                <ul class="subcategory-list">
                    @foreach (var category in categoryHeader.Categories)
                    {
                        <li class="subcategory-item">
                            <a href="@Url.Action("Products", new { categoryID = category.CategoryID })">
                                @category.Name
                            </a>
                        </li>
                    }
                </ul>
            </li>
        }
    </ul>
</div>

<style>
    .men-page {
        display: flex;
        align-items: flex-start;
        gap: 20px;
    }

    .categories {
        margin-top: 25px;
        width: 250px;
        padding: 15px;
        border-right: 2px solid #ddd;
        background: linear-gradient(180deg, #f5f5f5, #dddddd);
        position: sticky;
        top: 15px;
        margin-left: -80px;
        box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        transition: all 1s ease;
    }

    .category-header {
        list-style: none;
        margin-bottom: 10px;
    }

        .category-header h3 {
            font-size: 18px;
            font-weight: bold;
            padding: 10px;
            background: linear-gradient(165deg, #ef7e5f, #feb47b); /* Softer neutral gradient */
            color: #333; /* Dark text for better readability */
            border-radius: 6px;
            cursor: pointer;
            transition: background 0.5s ease, color 0.5s ease;
        }

            .category-header h3:hover {
                background: linear-gradient(125deg, #ff7e5f, #feb47b); /* Softer neutral gradient */
            }

    .subcategory-list {
        list-style: none;
        padding-left: 12px;
        max-height: 0;
        overflow: hidden;
        transition: max-height 1s ease-out;
    }

    .category-header:hover .subcategory-list {
        max-height: 500px; /* Adjust if needed */
    }

    .subcategory-item {
        padding: 5px;
        transition: transform 1s ease-in-out;
    }

        .subcategory-item a {
            text-decoration: none;
            color: #4a4a4a; /* Darker gray for better contrast */
            font-size: 16px;
            display: block;
            padding: 6px;
            border-radius: 5px;
            transition: background 0.5s ease, color 0.5s ease;
        }

            .subcategory-item a:hover {
                background: linear-gradient(225deg, #feb47b, #fff47b);
                color: #333;
                transform: translateX(6px);
            }

    .products {
        width: 75%;
        padding: 10px;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 20px;
    }

    .product {
        box-sizing: border-box;
        border: 1px solid #ddd;
        padding: 10px;
        text-align: center;
        border-radius: 6px;
        transition: transform 1s ease-in-out;
    }

        .product:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
</style>
