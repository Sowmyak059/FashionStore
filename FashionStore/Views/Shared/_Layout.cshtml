<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FashionStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FashionStore.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FashionStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Men" asp-action="Index">Men</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Women" asp-action="Index">Women</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Kids" asp-action="Index">Kids</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home & Living" asp-action="Index">Home & Living</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Beauty" asp-action="Index">Beauty</a>
                        </li>
                        <li class="nav-item">
                            <form method="get" action="/Products/Search">
                                <input type="text" name="query" placeholder="Search..." class="form-control">
                            </form>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FashionStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    /* Navbar Styling */
    .navbar {
        background: linear-gradient(to right, #f8f9fa, #ffffff); /* Subtle gradient */
        padding: 15px 20px;
        border-bottom: 2px solid #ddd;
    }

    /* Navbar Links */
    .navbar-nav .nav-link {
        font-size: 18px;
        font-weight: 500;
        color: #333 !important;
        transition: color 0.3s ease-in-out, transform 0.2s;
        padding: 10px 15px;
    }

        .navbar-nav .nav-link:hover {
            color: #ff4081 !important; /* Fashionable pink */
            transform: translateY(-2px);
        }

    /* Active Link */
    .navbar-nav .nav-item.active .nav-link {
        color: #ff4081 !important;
        font-weight: bold;
        border-bottom: 3px solid #ff4081;
    }

    /* Search Bar */
    .navbar-nav input[type="text"] {
        padding: 8px;
        border-radius: 20px;
        border: 1px solid #ccc;
        width: 200px;
        transition: width 0.3s ease-in-out;
    }

        .navbar-nav input[type="text"]:focus {
            width: 250px;
            border-color: #ff4081;
            outline: none;
        }

</style>