<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FashionStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FashionStore.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FashionStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Men" asp-action="Index">Men</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Women" asp-action="Index">Women</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Kids" asp-action="Index">Kids</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home_Living" asp-action="Index">Home & Living</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Beauty" asp-action="Index">Beauty</a>
                        </li>
                        <li class="nav-item">
                            <form method="get" action="/Products/Search">
                                <input type="text" name="query" placeholder="Search..." class="form-control">
                            </form>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FashionStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    /* --- Navbar Styling --- */
    .navbar-custom {
        background: #ffffff;
        padding: 15px 20px;
        border-bottom: 3px solid #ddd;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* --- Navbar Links Default Style (Black) --- */
    .navbar-nav .nav-link {
        font-size: 18px;
        font-weight: 500;
        padding: 10px 15px;
        color: #333 !important; /* Default text color */
        transition: all 0.3s ease-in-out;
        position: relative;
    }

    /* --- Hover Effect: Each Category Changes Color on Hover --- */
    .navbar-nav .nav-item:nth-child(1) .nav-link:hover {
        color: #007bff !important;
    }
    /* Men - Blue */
    .navbar-nav .nav-item:nth-child(2) .nav-link:hover {
        color: #ff4081 !important;
    }
    /* Women - Pink */
    .navbar-nav .nav-item:nth-child(3) .nav-link:hover {
        color: #ff9800 !important;
    }
    /* Kids - Orange */
    .navbar-nav .nav-item:nth-child(4) .nav-link:hover {
        color: #4caf50 !important;
    }
    /* Home & Living - Green */
    .navbar-nav .nav-item:nth-child(5) .nav-link:hover {
        color: #9c27b0 !important;
    }
    /* Beauty - Purple */

    /* --- Underline Effect on Hover --- */
    .navbar-nav .nav-link::after {
        content: '';
        display: block;
        width: 0;
        height: 3px;
        background: currentColor;
        transition: width 0.3s ease-in-out;
        position: absolute;
        bottom: -5px;
        left: 50%;
        transform: translateX(-50%);
    }

    .navbar-nav .nav-link:hover::after {
        width: 100%;
    }
    /* Search Bar */
    .navbar-search {
        position: relative;
        display: flex;
        align-items: center;
    }

    .search-input {
        width: 250px;
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 25px;
        outline: none;
        font-size: 14px;
    }

    .search-icon {
        position: absolute;
        right: 12px;
        color: #777;
        font-size: 16px;
        cursor: pointer;
    }

    /* Cart & Other Icons */
    .cart-icon {
        position: relative;
        margin-left: 15px;
    }

        .cart-icon a {
            font-size: 22px;
            color: #333 !important;
            transition: color 0.3s ease-in-out;
        }

            .cart-icon a:hover {
                color: #007bff !important;
            }

    /* Cart Badge */
    .cart-badge {
        position: absolute;
        top: -5px;
        right: -10px;
        background: red;
        color: white;
        font-size: 12px;
        font-weight: bold;
        border-radius: 50%;
        padding: 4px 7px;
    }

    /* Icons for Wishlist, OrderHistory, Logout */
    .navbar-nav .nav-item a i {
        font-size: 18px;
        margin-left: 15px;
        color: #333;
        transition: color 0.3s ease-in-out;
    }

        .navbar-nav .nav-item a i:hover {
            color: #007bff;
        }
    </style>




