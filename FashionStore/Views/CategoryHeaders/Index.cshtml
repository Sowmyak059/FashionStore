@model IEnumerable<FashionStore.Models.CategoryHeader>

@{
    ViewData["Title"] = "Category Types";
}

<h1>Category Types</h1>

@if (User.IsInRole("Admins"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>

}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainCategory.MainCategoryID)
            </td>
            @if (User.IsInRole("Admins"))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryHeaderID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryHeaderID">Delete</a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
