@model IEnumerable<FashionStore.Models.Product>

<h2 class="text-center my-4 text-uppercase fw-bold">Search Results</h2>

<div class="container">
    <div class="row justify-content-center">
        @if (!Model.Any())
        {
            <div class="col-12">
                <p class="text-center text-muted fs-5">No products found matching your search criteria.</p>
            </div>
        }
        else
        {
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <a href="/Products/SearchedItemDetails/@product.ProductID" class="text-decoration-none">
                            <img src="@product.ImageUrl" class="card-img-top img-fluid rounded-top" alt="@product.Name" style="height: 250px; object-fit: cover;">
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-dark fw-bold">@product.Name</h5>
                            <p class="card-text text-muted flex-grow-1">@product.Description</p>
                            <p class="card-text fw-bold text-primary fs-5">@product.Price kr</p>
                            <a href="/Products/SearchedItemDetails/@product.ProductID" class="btn btn-outline-primary mt-auto">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .card:hover {
        transform: scale(1.05);
        transition: 0.3s ease-in-out;
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: #fff;
    }
</style>
